<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <BarChart fx:id="randomchart" GridPane.rowIndex="1" legendVisible="false" animated="false">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <Pane prefHeight="66.0" prefWidth="500.0" GridPane.rowIndex="2">
         <children>
             <!-- Source: http://stackoverflow.com/a/14436371 -->
             <ComboBox fx:id="methodbox" layoutX="14.0" layoutY="18.0" onAction="#changeString" prefHeight="31.0" prefWidth="234.0" promptText="Sorting method">
                 <items>
                     <FXCollections fx:factory="observableArrayList">
                         <String fx:value="BubbleSort"/>
                         <String fx:value="InsertionSort"/>
                     </FXCollections>
                 </items>
                 <value>
                     <String fx:value="Bubblesort"/>
                 </value>
             </ComboBox>
            <Button layoutX="436.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#doStep" text="Step" />
         </children>
      </Pane>
   </children>
</GridPane>
